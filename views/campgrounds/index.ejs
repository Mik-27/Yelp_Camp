<%- include("../partials/header") %>

<div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://hipcamp-res.cloudinary.com/images/c_fill,f_auto,g_auto,h_630,q_60,w_1200/v1445554940/campground-photos/yepexlowon0q4itykwm7/tir-na-n-og-farm-tir-na-nog-farm-camp-tent-forest-stars.jpg" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block float-left carouselCaption1">
          <h1>Welcome to YelpCamp</h1>
          <p class="pl-2">Browse through a wide range of campgrounds.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://images.unsplash.com/photo-1559521783-1d1599583485?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block carouselCaption2">
          <h5>New Campground</h5>
          <p>If you are an organizer for camp, post your campgrounds on YelpCamp to better connect with interested people.</p>
          <a href="/campgrounds/new" class="btn btn-outline-light">Add Campground</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://images.unsplash.com/photo-1477512076069-d31eb021716f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block carouselCaption3">
          <h5>Campgrounds</h5>
          <p>YelpCamp provides a wide range of camping sites from all over India along with the reviews of visited individuals.</p>
          
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<div class="container">
    <!-- <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>Browse through a wide range of campgrounds.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header> -->
    
    <div class="row" id="campground-grid">
        <% campgrounds.forEach(function(campground) { %> 
            <div class="col-lg-4 col-md-6 col-sm-6" id="elements">
                <div class="card shadow bg-white rounded">
                    <img src="<%= campground.image %>" class="indexCardImg card-img-top" alt="Could not load Image">
                    <div class="card-body">
                      <a href="/campgrounds/<%=campground._id%>" class="card-title"><%= campground.name %></a>
                      <p class="card-text text-wrap"><%- campground.description.substring(0, 50) %>... </p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>  
</div>

<%- include("../partials/footer") %> 