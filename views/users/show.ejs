<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="cod-md-4">
            <div class="card">
                <img src="<%= user.avatar %>" alt="Could not load Image." class="img-thumbnail avatar">
            </div>
        </div>
        <div class="col-md-8 text-center">
            <h1 class="mt-4 mb-3"><%= user.firstName %> <%= user.lastName %> </h1>
            <h5>Email: <a href="mailto:<%= user.email %> "> <%= user.email %>  </a></h5>
        </div>
    </div>
    <hr>
    <div class="col-md-12">
        <h3><%= user.username %>'s Campgrounds: </h3>
        <ul>
            <% campgrounds.forEach((campground)=> { %>
                <li><a href="/campgrounds/<%= campground.id %> "> <%= campground.name %>  </a></li>
            <% }) %> 
        </ul>
    </div>
</div>

<%- include("../partials/footer") %> 