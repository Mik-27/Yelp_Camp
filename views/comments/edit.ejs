<%- include("../partials/header") %> 

<div class="conatiner">
    <div class="row justify-content-center">
        <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
            <h1 class="heading">Edit Comment</h1>
            <div class="alignForm">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="rating" class="text-muted">Rating:</label>
                        <div class="starsGroup">
                            <fieldset class="rating">
                                <input class="stars" type="radio" id="star5" name="comment[rating]" value="5" />
                                <label class = "full" for="star5" title="Awesome - 5 stars"></label>
                                <input class="stars" type="radio" id="star4" name="comment[rating]" value="4" />
                                <label class = "full" for="star4" title="Pretty good - 4 stars"></label>
                                <input class="stars" type="radio" id="star3" name="comment[rating]" value="3" />
                                <label class = "full" for="star3" title="Meh - 3 stars"></label>
                                <input class="stars" type="radio" id="star2" name="comment[rating]" value="2" />
                                <label class = "full" for="star2" title="Kinda bad - 2 stars"></label>
                                <input class="stars" type="radio" id="star1" name="comment[rating]" value="1" />
                                <label class = "full" for="star1" title="Sucks big time - 1 star"></label>
                            </fieldset>
                        </div>
                    </div>
                    
                    <div class="form-group mt-3">
                        <label for="inputComment" class="text-muted mb-1">Comment:</label>
                        <textarea id="inputComment" class="form-control" type="text" name="comment[text]" cols="30" rows="5"><%= comment.text %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground_id %> ">Go Back</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %> 